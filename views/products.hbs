<div class="container">
    <h2 class="mb-4">PRODUCTOS</h2>
    <div class="container" style="margin-top: 70px;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Puntos</th>
                    <th>Precio</th>
                </tr>
            </thead>
            {{#each products as |products key|}}
            <tbody>
                <tr href="/products/{{key}}">
                    <td>{{products.id}}</td>
                    <td> {{products.name}}</td>
                    <td> {{products.description}}</td>
                    <td> {{products.points}} pts</td>
                    <td> Q.{{products.price}}</td>
                    <td>
                        {{#ifEquals ../user.role 'CLIENT'}}
                        {{#ifEquals products.status 'STOCK'}}
                        <button class="btn btn-success" (click)="selectContact(contact)">COMPRAR</button>
                        {{else}}
                        Agotados
                        {{/ifEquals}}
                        {{/ifEquals}}
                    </td>
                </tr>
            </tbody>
            {{/each}}
        </table>
        <div class="card text-center" *ngIf="selectedContact">
            <div class="card-header">
                {{users.id}}
            </div>
            <div class="card-block">
                <h4 class="card-title">{{products.name}}</h4>
                <p class="card-text">
                    {{products.description}}
                </p>
            </div>
        </div>
    </div>
</div> <!-- /container -->