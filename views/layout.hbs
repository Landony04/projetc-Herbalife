<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="/assets/css/platzi-overflow.css" />
    <link rel="stylesheet" href="/assets/css/custom.css" />

    <title>Herbalife - {{title}}</title>
</head>
<style>
    .dropdown-toggle {
        color: #FFF !important;
    }
</style>

<body class="bg-secondary">
    <header>
        <div class="container-fluid">
            <div class="col m-2">
                <h1><a href="/"><img src="/assets/images/logo.png" style="max-height: 60px;"></a></h1>
            </div>
            <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top">
                {{#if user}}
                <a class="navbar-brand" href="/">Dashboard</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mr-auto">
                        {{#with user}}
                        {{#ifEquals ../user.role 'ADMIN'}}
                        <div class="dropdown">
                            <button class="btn bg-transparent dropdown-toggle" type="button" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                SOCIOS
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/users">Ver Socios</a>
                                <a class="dropdown-item" href="/add-partners">Agregar Socios</a>
                            </div>
                        </div>

                        <div class="dropdown">
                            <button class="btn bg-transparent dropdown-toggle" type="button" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                PEDIDOS
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/add-orders">Agregar Pedidos</a>
                                <a class="dropdown-item" href="/orders-admin">Ver Pedidos</a>
                                <a class="dropdown-item" href="/orders-client">Mis Pedidos</a>
                            </div>
                        </div>

                        <div class="dropdown">
                            <button class="btn bg-transparent dropdown-toggle" type="button" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                REPORTERIA
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/add-orders">Por mes</a>
                                <a class="dropdown-item" href="/orders-admin">Por dia</a>
                            </div>
                        </div>
                        {{else}}
                        <div class="dropdown">
                            <button class="btn bg-transparent dropdown-toggle" type="button" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                Mis Pedidos
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/orders-client">Ver Pedidos</a>
                                <a class="dropdown-item" href="/add-partners">Cancelar Pedidos</a>
                            </div>
                        </div>
                        {{/ifEquals}}
                        {{/with}}
                        <div class="dropdown" style="margin-left:5px;">
                            <button class="btn bg-transparent dropdown-toggle" type="button" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                PRODUCTOS
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/products">Ver Productos</a>
                                <a class="dropdown-item" href="/product">Agregar Productos</a>
                            </div>
                        </div>
                        <li class="nav-item">
                            <a href="/logout" class="nav-link" role="button" aria-pressed="true">Salir</a>
                        </li>
                    </ul>
                </div>
                <div class="col m-2 text-right">
                    <h3><span class="badge badge-info">{{user.name}}</span></h3>
                </div>
                {{else}}
                <a class="navbar-brand">Herbalife</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Registro</a>
                        </li>
                    </ul>
                </div>
            </nav>
            {{/if}}
        </div>
    </header>

    <main role="main" class="container-fluid">
        {{{content}}}
    </main>

    <footer class="footer swatch-900 mt-4">
        <div class="container">
            <p class="text-center">Herbalife - &copy; 2019</p><img src="/assets/images/logo-small.png">
        </div>
    </footer>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js"
        integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4"
        crossorigin="anonymous"></script>
</body>

</html>